# Folders
alias code="cd ~/Code"
alias config="cd ~/Code/SysConfig"
alias sandbox="cd ~/Code/Sandbox"

# Git
alias gs="git status -s"
alias ga="git add -A"
alias gc="git commit"
alias gl="git log"
alias gll="git log --oneline --graph"
alias gpull="git pull"
alias gpullr="git pull --rebase"
alias gpush="git push"
alias gwipe="git reset --hard && git clean -df"

# Maven
alias mpack="mvn clean package"
alias mcheck="mvn pmd:pmd pmd:cpd"
alias mcover="mvn cobertura:cobertura"

# CTags
alias ctagr="ctags -R --totals=yes ."

# Docker
alias dbuild="docker build"
alias drun="docker run"
alias dkill="docker ps -aq | xargs docker kill | xargs docker rm"

# System
alias tn="telnet"
alias glance="glances -t 10"
alias weather="curl wttr.in/Orland%20Park"
alias moon="curl wttr.in/Moon"
alias clock="date +%H:%M"

# Chat
alias irc="weechat"
alias tg="~/Code/tg/bin/telegram-cli -N"

# Project: Golem
alias gbuild="docker build -t seanshookman/golem ."
alias grun="docker run --name golem -d -p 1127:1127 seanshookman/golem"
alias gplay="telnet localhost 1127"
